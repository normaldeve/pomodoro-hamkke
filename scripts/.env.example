# Docker Hub
DOCKER_USERNAME=your-dockerhub-username

# Image Tag (GitHub Actions에서 자동 설정됨)
IMAGE_TAG=latest

# Database
DB_NAME=hamkke
DB_USERNAME=hamkke_user
DB_PASSWORD=your_secure_password_123
MYSQL_ROOT_PASSWORD=root_password_123

# AWS S3
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=your-s3-bucket-name

# JWT
JWT_SECRET=your_jwt_secret_key_min_256_bits_recommended
JWT_ACCESS_TOKEN_VALIDITY=1800000
JWT_REFRESH_TOKEN_VALIDITY=604800000

# CORS (80포트로 접속)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://your-server-ip

# Admin Account
ADMIN_ID=admin
ADMIN_PASSWORD=admin_password_123
ADMIN_NICKNAME=관리자